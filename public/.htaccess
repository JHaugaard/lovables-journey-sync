# HTTP Basic Authentication (ONLY for auth-probe.txt)
<Files "auth-probe.txt">
    AuthType Basic
    AuthName "Authentication Probe"
    AuthUserFile /home/u190197056/domains/haugaard.dev/.htpasswd
    Require valid-user
</Files>

# POST-DEPLOY CHECKLIST:
# 1. Create /domains/haugaard.dev/.htpasswd with your credentials
# 2. Set file permissions: chmod 600 /domains/haugaard.dev/.htpasswd
# 3. Test: curl -I https://haugaard.dev/auth-probe.txt (should return 401)
# 4. Test with auth: curl -I -u username:password https://haugaard.dev/auth-probe.txt (should return 200)

# Enable mod_rewrite for SPA routing
RewriteEngine On
DirectoryIndex index.html index.php default.php

# Handle React Router - redirect everything to index.html
# except files that actually exist
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule . index.html [L]

# Security headers
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options nosniff
    Header always set X-Frame-Options DENY
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    # Do not cache version.txt
    <Files "version.txt">
        Header unset ETag
        Header set Cache-Control "no-store, no-cache, must-revalidate, max-age=0"
        Header set Pragma "no-cache"
    </Files>
</IfModule>

# Gzip compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
</IfModule>

# Browser caching
<IfModule mod_expires.c>
    ExpiresActive on
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    # Shorter cache for HTML to ensure updates are seen
    ExpiresByType text/html "access plus 5 minutes"
    # Do not cache version.txt
    <Files "version.txt">
        ExpiresActive on
        ExpiresDefault "access plus 0 seconds"
    </Files>
</IfModule>